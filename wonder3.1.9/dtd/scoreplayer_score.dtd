<!ELEMENT scorefile (orchestra,score+) >
<!ATTLIST scorefile
  path	  CDATA   #IMPLIED
  date    CDATA   #IMPLIED
>

<!ELEMENT orchestra (src*) >

<!ELEMENT src EMPTY>
<!ATTLIST src
  id      CDATA   #REQUIRED
  type    CDATA   #REQUIRED
  posx    CDATA   #REQUIRED
  posy    CDATA   #REQUIRED
  angle   CDATA   #REQUIRED
>

<!ELEMENT score (pos|type|angle|active|name|doppler)*>

<!ELEMENT pos EMPTY>
<!ATTLIST pos
  id      CDATA   #REQUIRED
  x       CDATA   #REQUIRED
  y       CDATA   #REQUIRED
  t	  CDATA   #REQUIRED
  dur     CDATA   #REQUIRED
>

<!ELEMENT type EMPTY>
<!ATTLIST type
  id      CDATA   #REQUIRED
  type    CDATA   #REQUIRED
  t       CDATA   #REQUIRED
>

<!ELEMENT angle EMPTY>
<!ATTLIST angle
  id      CDATA   #REQUIRED
  angle   CDATA   #REQUIRED
  t	  CDATA   #REQUIRED
  dur     CDATA   #REQUIRED
>

<!ELEMENT active EMPTY>
<!ATTLIST active
  id      CDATA   #REQUIRED
  active  CDATA   #REQUIRED
  t	  CDATA   #REQUIRED
>

<!ELEMENT name EMPTY>
<!ATTLIST name
  id      CDATA   #REQUIRED
  name    CDATA   #REQUIRED
  t	  CDATA   #REQUIRED
>

<!ELEMENT doppler EMPTY>
<!ATTLIST doppler
  id      CDATA   #REQUIRED
  doppler CDATA   #REQUIRED
  t	  CDATA   #REQUIRED
>
